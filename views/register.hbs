<!-- register.handlebars -->
<div class="container p-3">
    <div class="row justify-content-around">
        <form class="col-md-4 bg-light p-3" action="/register" method="POST">
            <h1 class="text-center text-uppercase h2">Đăng ký tài khoản</h1>
            <div class="from-group">
                <label for="fullname">Họ và tên</label>
                <input class="form-control" type="text" name="fullname" class="input-signup-password" required>

            </div>

            <div class="from-group">
                <label>Email</label>
                <input class="form-control" type="email" name="email" class="input-signup-username" required>
            </div>

            <label>Password</label>
            <input class="form-control" type="password" name="password" class="input-signup-password" required>

            <label>Avatar</label>
            <input class="form-control" type="file" name="avatar" accept="image/*" required>
            <br>
            <a href="./login">Đăng nhập</a>
            <br>
            <br>
            {{!-- <input class="btn-primary btn btn-block" href="./login" type="submit" value="Đăng ký"> --}}
            <a class="btn-primary btn btn-block" href="./login">Đăng ký</a>
        </form>
       
    </div>
</div>